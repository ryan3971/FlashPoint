<?xml version="1.0" encoding="utf-8"?>

  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical">
	    
	    
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
	
	<LinearLayout 
    	android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:orientation="vertical"
    	android:layout_weight="5">
    	
	    <LinearLayout 
    	android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:layout_weight="1">
    	
	    
  
	    
	</LinearLayout>
  
	    <LinearLayout 
    	android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:orientation="horizontal"
    	android:layout_weight="0.3">
    	
	    <LinearLayout 
	    	android:layout_width="0dp"
	    	android:layout_height="match_parent"
	    	android:layout_weight="0.7">
    	
	    
	</LinearLayout>
  
	    <LinearLayout 
	        android:id="@+id/continueInstructionsLayout"
	    	android:layout_width="0dp"
	    	android:layout_height="match_parent"
	    	android:layout_weight="1">
    	
	        <scale.AutoResizeTextView
		        android:id="@+id/continueInstructionsText"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:alpha="0.5"
		        android:gravity="center"/>
	    
	</LinearLayout>
	
	    <LinearLayout 
	    	android:layout_width="0dp"
	    	android:layout_height="match_parent"
	    	android:layout_weight="0.7">
    	
	    
	</LinearLayout>
	    
	</LinearLayout>
	    
	</LinearLayout>
	
    <LinearLayout 
        android:id="@+id/gameScoresLayout"
    	android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:orientation="horizontal"
    	android:background="@null"
    	android:baselineAligned="false"
    	android:layout_weight="0.7">
	 
	<LinearLayout 
    	android:layout_width="0dp"
    	android:layout_height="match_parent"
    	android:layout_weight="1">
    	
	    <RelativeLayout 
   			 android:layout_width="match_parent"
   			 android:layout_height="match_parent">	
   			 
	         <ImageView
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
				android:scaleType="fitXY"
		        android:background="@null"
		        android:src="@drawable/eraser_display" />
	    
	    <scale.AutoResizeTextView
	        android:id="@+id/redoDisplay"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	    	android:background="@null"
	    	android:layout_weight="1"
	        android:gravity="center"/>
	    
	    </RelativeLayout>
	</LinearLayout>

	<LinearLayout 
	    android:id="@+id/lll"
    	android:layout_width="0dp"
    	android:layout_height="match_parent"
    	android:background="@null"
    	android:orientation="vertical"
    	android:layout_weight="1">
    	

    <scale.AutoResizeTextView
        android:id="@+id/num1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
    	android:background="@null"
    	android:onClick="inGameRedo"
    	android:layout_weight="1"
        android:gravity="center"/>
    
    
	</LinearLayout>
	
	<LinearLayout 
    	android:layout_width="0dp"
    	android:layout_height="match_parent"
    	android:background="@null"
    	android:layout_weight="0.5">
    	
	     <scale.AutoResizeTextView
	        android:id="@+id/plus1"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
    		android:background="@null"
	        android:gravity="center"
	        android:text="+"/>
    
    	
	</LinearLayout>
	
	
	<LinearLayout 
    	android:layout_width="0dp"
    	android:layout_height="match_parent"
    	android:background="@null"
    	android:layout_weight="1">
    
	 <scale.AutoResizeTextView
        android:id="@+id/num2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
    	android:background="@null"    	
    	android:onClick="inGameRedo"
        android:gravity="center" />
    
	</LinearLayout>
	
	<LinearLayout 
    	android:layout_width="0dp"
    	android:layout_height="match_parent"
    	android:background="@null"
    	android:layout_weight="0.5">
    	
	     <scale.AutoResizeTextView
	        android:id="@+id/plus2"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
    		android:background="@null"
	        android:gravity="center"
	        android:text="+"/>
    
    	
	</LinearLayout>
	
	<LinearLayout 
    	android:layout_width="0dp"
    	android:layout_height="match_parent"
    	android:background="@null"
    	android:layout_weight="1">
    	
	    
	     <scale.AutoResizeTextView
        android:id="@+id/num3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
    	android:background="@null"
    	android:onClick="inGameRedo"
        android:gravity="center" />
	    
	</LinearLayout>
	
	<LinearLayout 
    	android:layout_width="0dp"
    	android:layout_height="match_parent"
    	android:background="@null"
    	android:layout_weight="0.5">
    	
	     <scale.AutoResizeTextView
	        android:id="@+id/plus3"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
    		android:background="@null"
	        android:gravity="center"
	        android:text="+"/>
    
    	
	</LinearLayout>
	
	<LinearLayout 
    	android:layout_width="0dp"
    	android:layout_height="match_parent"
    	android:background="@null"
    	android:layout_weight="1">
	     
	    
    <scale.AutoResizeTextView
        android:id="@+id/num4"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
    	android:background="@null"
    	android:onClick="inGameRedo"
        android:gravity="center"/>
    
	</LinearLayout>
	
	<LinearLayout 
    	android:layout_width="0dp"
    	android:layout_height="match_parent"
    	android:background="@null"
    	android:layout_weight="0.5">
    	
	     <scale.AutoResizeTextView
	        android:id="@+id/plus4"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
    		android:background="@null"
	        android:gravity="center"
	        android:text="+"/>
    
    	
	</LinearLayout>
	
	
	<LinearLayout 
    	android:layout_width="0dp"
    	android:layout_height="match_parent"
    	android:background="@null"
    	android:layout_weight="1">
	     
	    
    
	     <scale.AutoResizeTextView
        android:id="@+id/num5"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
    	android:background="@null"
    	android:onClick="inGameRedo"
        android:gravity="center" />
    
	</LinearLayout>
	
	
	<LinearLayout 
    	android:layout_width="0dp"
    	android:layout_height="match_parent"
    	android:background="@null"
    	android:layout_weight="0.5">
    	
	     <scale.AutoResizeTextView
	        android:id="@+id/plus5"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
    		android:background="@null"
	        android:gravity="center"
	        android:text="="/>
    
    	
	</LinearLayout>
	
	
	<LinearLayout 
    	android:layout_width="0dp"
    	android:layout_height="match_parent"
    	android:background="@null"
    	android:layout_weight="1.5">
    
	     <scale.AutoResizeTextView
        android:id="@+id/numHS"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
    	android:background="@null"
        android:gravity="center"/>
    
	</LinearLayout>
		
	<LinearLayout 
    	android:layout_width="0dp"
    	android:layout_height="match_parent"
    	android:background="@null"
    	android:layout_weight="1.5">
	     
    <ImageButton
	        android:id="@+id/redo"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
        	android:scaleType="fitXY"
        	android:background="@null"
	        android:onClick="doRedo"
			android:src="@drawable/redo_image"  />
    </LinearLayout>
	    </LinearLayout>
    </LinearLayout>
</LinearLayout>